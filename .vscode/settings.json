{
  // General normalizations.
  "files.encoding": "utf8",
  "files.eol": "\n",
  "editor.tabSize": 2,
  "editor.rulers": [80],

  // Auto format on save (requires recommended extensions).
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {"source.organizeImports": "always"},
  "editor.defaultFormatter": "esbenp.prettier-vscode",

  // File nesting. To enable, you must also
  // enable `"explorer.fileNesting.enabled": true,` in your user settings.
  "explorer.fileNesting.expand": false,
  "explorer.fileNesting.patterns": {
    "*.tsx": "${capture}.stories.ts,${capture}.test.ts",
    "package.json": "pnpm-lock.yaml",
    "tsconfig.json": "tsconfig.*.json"
  },

  // Check spelling (requires recommended extensions).
  "cSpell.ignorePaths": [".git", "dist", "node_modules", "pnpm-lock.yaml"],
  "cSpell.words": ["dbaeumer", "esbenp", "foxundermoon", "oxlint", "workchain"]
}
